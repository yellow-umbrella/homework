@model Formula1.Season

@{
    ViewData["Title"] = "Create";
}

<h1>Створити</h1>

<h4>Сезон</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TyreSupplierId" class="control-label"></label>
                <select asp-for="TyreSupplierId" class ="form-control" asp-items="ViewBag.TyreSupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceDirector" class="control-label"></label>
                <input asp-for="RaceDirector" class="form-control" />
                <span asp-validation-for="RaceDirector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rules" class="control-label"></label>
                <input asp-for="Rules" class="form-control" />
                <span asp-validation-for="Rules" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
